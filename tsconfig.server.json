{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "src/webhook.ts",
    "src/services/**/*.ts",
    "src/utils/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "src/**/*.tsx",

    "src/index.ts",
    "src/http-server.ts",
    "src/lib/**",
    "src/routes/**"
  ]
}
